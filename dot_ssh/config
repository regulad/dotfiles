# Oracle (Legacy VCN)
Match Host git.regulad.xyz User regulad
    User opc
    IdentityFile ~/.ssh/id_rsa.pub
    IdentityFile ~/.ssh/id_rsa  # fallback
    IdentitiesOnly yes

Host doppelgangerhq.com
    User ubuntu
    IdentityFile ~/.ssh/id_rsa.pub
    IdentityFile ~/.ssh/id_rsa  # fallback
    IdentitiesOnly yes

