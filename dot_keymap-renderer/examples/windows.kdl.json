{
  "title": "Windows Desktop",
  "binds": {
    "<Delete>": {
      "short": "Delete",
      "long": "Delete selected item to Recycle Bin"
    },
    "<F2>": {
      "short": "Rename",
      "long": "Rename selected item"
    },
    "<F3>": {
      "short": "Search",
      "long": "Open search"
    },
    "<F5>": {
      "short": "Refresh",
      "long": "Refresh current window"
    },
    "<F10>": {
      "short": "Menu",
      "long": "Activate menu bar"
    },
    "<Enter>": {
      "short": "Open",
      "long": "Open selected item"
    },
    "<Escape>": {
      "short": "Cancel",
      "long": "Cancel current operation"
    },
    "<Backspace>": {
      "short": "Up",
      "long": "Go up one folder level"
    },
    "<Tab>": {
      "short": "Next",
      "long": "Cycle through elements"
    },
    "<Up>": {
      "short": "↑",
      "long": "Navigate up"
    },
    "<Down>": {
      "short": "↓",
      "long": "Navigate down"
    },
    "<Left>": {
      "short": "←",
      "long": "Navigate left / Collapse folder"
    },
    "<Right>": {
      "short": "→",
      "long": "Navigate right / Expand folder"
    },
    "<Space>": {
      "short": "Select",
      "long": "Select/toggle item"
    },
    "<Home>": {
      "short": "First",
      "long": "Jump to first item"
    },
    "<End>": {
      "short": "Last",
      "long": "Jump to last item"
    }
